{% extends 'base.html.twig' %}
{% block title %}Toong - Nhóm{% endblock %}

{% block body %}
  <div class = "container">
    <div class = "row">
      <div class = "col-md-12">
        <h1>Danh sách nhóm</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form class="form-horizontal" method="post" id="f_groupsearch">
          {{form|raw}}
        </form>
      </div>
      <div class="col-md-12">
        <div class="center-block width200">
          <a class="btn btn-info" href="#" id="btnsearch"> Tìm kiếm </a>
        </div>
      </div>
    </div>
    <div class="row"><div class="height20"></div></div>
    <div class = "row">
      <div class = "col-md-12">
        {{ include('group/list.html.twig', {'groups': groups}) }}
      </div>
    </div>
    <div class = "row">
      <div class="col-md-12">
        <div class="center-block width200">
          <a class = "btn btn-primary" href = "{{ path('group_add') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Thêm</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  <script id="template_table" type="text/x-handlebars-template">
  <%#list%>
    <tr>
    <td><%idx%></td>
    <td><%name%></td>
    <td><%address%></td>
    <td><%phone%></td>
    <td><%taxcode%></td>
    <td><%taxaddress%></td>
    <td><%description%></td>
    <td><%members%></td>
    <td><a href="/group/edit/<%id%>"><span class="glyphicon glyphicon-pencil"></span></a></td>
    </tr>
  <%/list%>
  </script>

  <script>
    {{script|raw}}
  </script>
  <script src="{{asset ('js/handlebars.min.js')}}"></script>
  <script src="{{asset ('js/group.js')}}"></script>
{% endblock %}
