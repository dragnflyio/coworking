{% extends 'base.html.twig' %}
{% block title %}
Add new user
{% endblock %}

{% block body %}
<div id="wrapper">
  <div class="container">
    <div class="row">
          <div class="col-md-12">
              <h3>Add new user</h3>
        

          </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        {{ form_start(form, {'attr':{'class': 'form-horizontal' }}) }}
          {{ form_errors(form) }}
          <div class="form-group">
            <label for="user_username" class="control-label text-nowrap col-md-2">Name</label>
                        <div class="col-md-10">
              {{ form_widget(form.username, {'attr': {'placeholder':'User name', 'class':'form-control' }}) }}
            </div>
          </div>
          
          <div class="form-group">
            <label for="user_email" class="control-label text-nowrap col-md-2">Email</label>
                        <div class="col-md-10">
              {{ form_widget(form.email, {'attr': {'placeholder':'User email', 'class':'form-control' }}) }}
            </div>
          </div>
            <div class="form-group">
            <label for="user_password_first" class="control-label text-nowrap col-md-2">Password</label>
                        <div class="col-md-10">
              {{ form_widget(form.password.first, {'attr': {'placeholder':'User password', 'class':'form-control' }}) }}
            </div>
          </div>
          <div class="form-group">
            <label for="user_password_second" class="control-label text-nowrap col-md-2">Repeat</label>
                        <div class="col-md-10">
              {{ form_widget(form.password.second, {'attr': {'placeholder':'Repeat password', 'class':'form-control' }}) }}
            </div>
          </div>


            <button class="btn btn-primary" type="submit">Save</button>
        {{ form_end(form) }}
      </div>
    </div>


  </div> <!-- /container -->

</div><!-- /wrapper -->
{% endblock %}

