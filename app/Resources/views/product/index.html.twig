{% extends "::base.html.twig" %}

{% block title %}Toong - Danh sách sản phẩm{% endblock %}

{% block body %}
  <div class = "container">
    <h1 class = "page-title">Danh sách giá sản phẩm</h1>
    <div class="btn-group">
      <a class = "btn btn-primary" href = "{{ path('category_add') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Nhập mới</a>
      <a class = "btn btn-primary" href = "{{ path('product_import') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Nhập DL từ file excel</a>
      <a class = "btn btn-primary" href = "{{ path('category_add') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Export to excel</a>
    </div>
    <div class = "search-form">
      {{ form|raw}}
      <button class = "btn btn-primary">Tìm kiếm</button>
    </div>
    <div class = "list-product">
      {{ include('product/list.html.twig', { 'products': products }) }}
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script>
  {{script|raw}}
  </script>
{% endblock %}
