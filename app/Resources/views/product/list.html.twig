<table class = "table">
  <thead>
    <th>Mã sản phẩm</th>
    <th>Tên(VN)</th>
    <th>Tên(ENG)</th>
    <th>ĐVT</th>
    <th>Loại</th>
    <th>Danh mục</th>
    <th>Giá</th>
  </thead>
  <tbody>
    {% for index,product in products %}
      <tr>
        <td>{{product.code}}</td>
        <td>{{product.name_vi}}</td>
        <td>{{product.name_en}}</td>
        <td>{{product.unitname}}</td>
        <td>{{product.type}}</td>
        <td>{{product.catname}}</td>
        <td>{{product.price|number_format(3, ',')}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
